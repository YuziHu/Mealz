<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0sp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView

        android:id="@+id/mealplan_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="20sp"
        app:cardCornerRadius="4sp"
        app:cardElevation="1sp"
        app:cardMaxElevation="2sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/mealplan_image"
                android:layout_width="match_parent"
                android:layout_height="90sp"
                android:layout_centerHorizontal="true"
                android:clickable="false"
                android:scaleType="centerCrop"
                android:src="@mipmap/mealzlogo" />

            <TextView
                android:id="@+id/mealplan_name"
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:layout_below="@+id/mealplan_image"
                android:layout_centerHorizontal="true"
                android:layout_marginVertical="5sp"
                android:gravity="center"
                android:text="Meal Plan Name"
                android:textColor="#000" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/dislike_button"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="130sp"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_below="@+id/mealplan_view"
        android:background="@drawable/ic_clear_black_24dp" />

    <Button
        android:id="@+id/like_button"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="230sp"

        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_below="@+id/mealplan_view"
        android:background="@drawable/ic_favorite_black_24dp" />

</RelativeLayout>