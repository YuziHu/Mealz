<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1sp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        app:cardCornerRadius="4sp"
        app:cardMaxElevation="2sp"
        app:cardElevation="1sp"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="90sp"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"
                android:id="@+id/mealplan_image"
                android:src="@mipmap/ic_launcher"
                android:clickable="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:id="@+id/mealplan_name"
                android:text="Meal Plan Name"
                android:layout_below="@+id/mealplan_image"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginVertical="5sp"
                android:textColor="#000"
                />

            <Button
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:id="@+id/dislike_button"
                android:layout_below="@+id/mealplan_name"/>

            <Button
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:id="@+id/like_button"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/mealplan_name"/>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>